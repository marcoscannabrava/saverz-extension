{
  "name": "Saverz chrome extension",
  "version": "1.0",
  "description": "Build an Extension!",

  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "tabs"
  ],
    "permissions": [
    "contextMenus", "storage"
  ],

  "browser_action": {
    "default_title": "See Coupons and Help Researchers",
    "default_popup": "popup.html",
    "default_icon": "images/saverz-icon.png"
  },
    "icons": {
    "16": "images/saverz-icon.png",
    "32": "images/saverz-icon.png",
    "48": "images/saverz-icon.png",
    "128": "images/saverz-icon.png"
  }
}
