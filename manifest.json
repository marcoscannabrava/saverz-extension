{
  "name": "Saverz chrome extension",
  "version": "1.0",
  "description": "Build an Extension!",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "scripts/api-calls.js",
      "scripts/utilities.js",
      "background.js"
    ]
  },
  "permissions": [
    "tabs",
    "webRequest"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "images/saverz-icon.png"
  }
}
