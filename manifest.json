{
  "name": "$averZ",
  "version": "1.0",
  "description": "Shop Online & Fund Research",

  "manifest_version": 2,
  "background": {
    "scripts": [
      "scripts/api-calls.js",
      "scripts/utilities.js",
      "scripts/inject-coupon-popup.js",
      "background.js"
    ]
  },
  "permissions": [
    "tabs",
    "webRequest",
    "https://www.centauro.com.br/",
    "https://www.casasbahia.com.br/"
  ],

  "browser_action": {
    "default_title": "Shop Online & Fund Research",
    "default_popup": "popup.html",
    "default_icon": "images/saverz-icon.png"
  },
    "icons": {
    "16": "images/saverz-icon.png",
    "32": "images/saverz-icon.png",
    "48": "images/saverz-icon.png",
    "128": "images/saverz-icon.png"
  }
}
